<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.endura.pos_system">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Possystem"
        android:networkSecurityConfig="@xml/network_security_config" >

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Possystem.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.barcode.barcodeActivity"
            android:theme="@style/Theme.Possystem.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".base.BaseActivity"
            android:theme="@style/Theme.Possystem.NoActionBar"
            android:parentActivityName=".login.LoginActivity" />

        <activity
            android:name=".ui.barcode.BarcodeActivity"
            android:theme="@style/Theme.Possystem.NoActionBar"
            android:parentActivityName=".ui.sale.SaleFragment" />

        <activity android:name=".ui.order.PopUp_MonthYearPicker"
            android:theme="@style/AppTheme.popMe" />

<!--        <activity-alias-->
<!--            android:name=".ui.order.OrderFragment"/>-->

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>